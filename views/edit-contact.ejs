<div class="main">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
               <h2>Form ubah data kontak</h2>

               <% if (typeof errors != 'undefined') { %>
                    <div class="alert alert-danger" role="alert">
                        <ul> 
                            <% errors.forEach(error => { %>
                                <li><%= error.msg %> </li>
                            <% }) %>
                        </ul>
                    </div>
               <% } %>

               <form class="py-5" method="POST" action="/contact?_method=PUT">
                <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama %>">
                <input type="hidden" name="_id" value="<%= contact._id %>">
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama Lengkap</label>
                  <input type="text" class="form-control" id="nama" name="nama" value="<%= contact.nama %>" required>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>" required>
                </div>

                <div class="mb-3">
                    <label for="nohp" class="form-label">Nomor Handphone</label>
                    <input type="nohp" class="form-control" id="nohp" name="nohp" value="<%= contact.nohp %>" required>
                </div>

                <button type="submit" class="btn btn-success">Edit data</button>
              </form>
            </div>
        </div>
    </div>
</div>